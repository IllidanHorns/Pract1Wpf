            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <TextBlock x:Name="TextBox_1" HorizontalAlignment="Left" Height="76" Margin="428,18,0,0" TextWrapping="Wrap" Text="=Your result=" VerticalAlignment="Top" Width="315" FontFamily="Bauhaus 93" FontSize="36" Background="#FF7C20C6" TextAlignment="Center" Foreground="#FFF3EBEB">
            <TextBlock.Effect>
                <DropShadowEffect/>
            </TextBlock.Effect>
        </TextBlock>
        <Button x:Name="Start_Button" Content="=Start new game=" HorizontalAlignment="Left" Height="50" Margin="470,357,0,0" VerticalAlignment="Top" Width="231" Foreground="#FFF7F4F4" FontFamily="Bauhaus 93" FontSize="20" Background="#FF7C20C6" BorderBrush="#FFF6EFEF" Click="Button_Click">
