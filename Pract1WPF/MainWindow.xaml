        <Button x:Name="Button_6" Content=" " HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" Margin="248,156,0,0" FontFamily="Algerian" FontSize="24" Click="Game_Button_Click" Background="#FF7C20C6">
            <Button.Effect>
                <DropShadowEffect/>
